@model TestProject.Web.Models.OrderViewModel

@{
    ViewData["Title"] = "GetOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetOrder</h1>

<form asp-action="Update" asp-controller="Order" method="post">
    <div>
        <hr />
        <dl class="row">
            <input asp-for="MotorcycleId" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="Price" type="hidden" />
            <input asp-for="CreationDate" type="hidden" />
            <input asp-for="Status" type="hidden" />
            <input asp-for="Id" type="hidden" />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LicensePlate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LicensePlate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Confirm</button>
        <a asp-action="Index" asp-controller="Order" class="btn btn-secondary">Cancel</a>
    </div>
</form>

